<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>netcoreapp3.0</TargetFramework>
    <RootNamespace>msix.catalog.app</RootNamespace>
    <AssemblyName>msix.catalog.app</AssemblyName>
    <UseWPF>true</UseWPF>
    <PackAsTool>false</PackAsTool>
    <ToolCommandName>msix-catalog</ToolCommandName>
    <Version>0.0.1</Version>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <PackageId>dotnet-msix-catalog</PackageId>
    <Authors>rido</Authors>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>    
    <ApplicationIcon>AppPackage.ico</ApplicationIcon>
    <RuntimeIdentifiers>win-x86;win-x64</RuntimeIdentifiers>
    <PackageProjectUrl>https://github.com/ridomin/msix-catalog</PackageProjectUrl>
    <RepositoryUrl>https://github.com/ridomin/msix-catalog</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>msix</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="MahApps.Metro" Version="1.6.5" />
    <PackageReference Include="MahApps.Metro.IconPacks" Version="3.0.0-alpha0096" />
    <PackageReference Include="Microsoft.ApplicationInsights.WindowsServer" Version="2.8.1" />
    <PackageReference Include="Microsoft.Windows.Compatibility" Version="2.1.0-preview.18571.3" />
    <PackageReference Include="Humanizer.Core" Version="2.5.16" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\msix.catalog.lib\msix.catalog.lib.csproj" />
  </ItemGroup>
  
</Project>
